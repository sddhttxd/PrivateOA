
@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <form id="loginform" class="form-horizontal" role="form">
        <h2>登录</h2>
        <div class="form-group">
            <label for="firstname" class="col-sm-2 control-label">用户名：</label>
            <div class="col-sm-10">
                <input id="txtUserName" class="form-control" type="text" placeholder="用户名、姓名或手机号" />
            </div>
        </div>
        <div class="form-group">
            <label for="firstname" class="col-sm-2 control-label">密码：</label>
            <div class="col-sm-10">
                <input id="txtPassword" class="form-control" type="password" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="button" class="btn btn-primary" id="btnSave">登录</button>
            </div>
        </div>
    </form>
    <form id="detailform" style="display:none;">
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">用户名：</label>
                <div class="col-sm-10">
                    <input id="txtUserName" class="form-control" type="text" />
                </div>
            </div>
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">密码：</label>
                <div class="col-sm-10">
                    <input id="txtPassword" class="form-control" type="password" />
                </div>
            </div>
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">确认密码：</label>
                <div class="col-sm-10">
                    <input id="txtConfirmPwd" class="form-control" type="password" />
                </div>
            </div>
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">姓名：</label>
                <div class="col-sm-10">
                    <input id="txtTrueName" class="form-control" type="text" />
                </div>
            </div>
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">电话：</label>
                <div class="col-sm-10">
                    <input id="txtTellPhone" class="form-control" type="text" />
                </div>
            </div>
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">部门：</label>
                <div class="col-sm-10">
                    <input id="txtDepartment" class="form-control" type="text" />
                </div>
            </div>
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">状态：</label>
                <div class="col-sm-10">
                    <select id="sltStatus" class="form-control">
                        <option value="1">活跃</option>
                        <option value="2">注销</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">备注：</label>
                <div class="col-sm-10">
                    <input id="txtRemark" class="form-control" type="text" />
                </div>
            </div>
    </form>
</div>

@section Scripts {
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap-table.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">
        var user = new Object();

        $("#btnSave").click(function () {
            user = checkData();
            if (user != null) {
                $.ajax({
                    cache: true,
                    type: "POST",
                    url: "UserLogin",
                    data: user,
                    async: false,
                    error: function (request) {
                        alert("登录失败，系统异常！");
                    },
                    success: function (data) {
                        //alert("登录成功！");
                        //显示用户信息
                    }
                });
            }
        });
        function checkData() {
            user.username = $("#txtUserName").val();
            user.truename = $("#txtTrueName").val();
            user.tellphone = $("#txtTellPhone").val();
            user.password = $("#txtPassword").val();
            if (user.username == "") {
                alert("账号不能为空！");
                return null;
            }
            if (user.password == "") {
                alert("密码不能为空！");
                return null;
            }
            return user;
        }
    </script>
}
