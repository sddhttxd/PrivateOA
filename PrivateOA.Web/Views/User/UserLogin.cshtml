<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PrivateOA - UserLogin</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap-table.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <form id="loginform" class="form-horizontal" role="form">
            <h2>登录</h2>
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">用户名：</label>
                <div class="col-sm-10">
                    <input id="txtUserName" class="form-control" type="text" placeholder="用户名、姓名或手机号" />
                </div>
            </div>
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">密码：</label>
                <div class="col-sm-10">
                    <input id="txtPassword" class="form-control" type="password" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" class="btn btn-primary" id="btnLogin">登录</button>
                </div>
            </div>
        </form>
    </div>

    <script type="text/javascript">
        var user = new Object();

        $("#btnLogin").click(function () {
            user = checkData();
            if (user != null) {
                $.ajax({
                    cache: true,
                    type: "POST",
                    url: "UserLogin",
                    data: user,
                    async: false,
                    error: function (request) {
                        alert("登录失败，系统异常！");
                    },
                    success: function (data) {
                        if (data != null && data.Result != null) {
                            //alert("登录成功！");
                            if (data.Result.Role == 1) {
                                window.location = "/User/UserList";
                            } else {
                                window.location = "/User/UserDetail?userid=" + data.Result.UserID;
                            }
                        } else {
                            alert(data.ErrorMsg);
                        }
                    }
                });
            }
        });
        function checkData() {
            user.username = $("#txtUserName").val();
            user.truename = $("#txtTrueName").val();
            user.tellphone = $("#txtTellPhone").val();
            user.password = $("#txtPassword").val();
            if (user.username == "") {
                alert("账号不能为空！");
                return null;
            }
            if (user.password == "") {
                alert("密码不能为空！");
                return null;
            }
            return user;
        }
    </script>

</body>
</html>